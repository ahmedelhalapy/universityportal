@model IEnumerable<UniversityCourseAndResultManagmentSystem.Models.Department>

@{
    ViewBag.Title = "Index";
}



<table class="table">
    <br/>
    <br/>
    <h2>All Department </h2>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeptCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeptName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.DepartmentId}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.DepartmentId})
            </td>
        </tr>
    }

</table>
